      "description": "others parameters",
      "required": false
    },
    {
      "name": "Progress",
      "param": "--progress",
      "description": "Progress report.",
      "no_value": true,
      "default": true
    },
    {
      "name": "Verbose",
      "param": "--verbose",
      "description": "Verbose.",
      "no_value": true,
      "default": true
